extends ../navbar

block content
  .view-dialog-container
    .view-dialog
      .view-dialog-header
      .view-dialog-content
        .row.mb-4
          .col-12
            h1.text-center.mb-0(style="font-size: 1.8rem; font-weight: 600; color: #2e3338;")
              i.fas.fa-folder.me-2(style="color: #4e73df;")
              | Category Details
        hr(style="border: none; border-top: 1px solid #e3e6f0; margin: 2rem 0;")
        .view-detail-section
          h6.view-section-title
            i.fas.fa-info-circle.me-2
            | Basic Information
          .view-detail-row
            .view-detail-item
              .view-detail-label
                i.fas.fa-tag
                | Category Name
              .view-detail-value= category.name || 'N/A'
            .view-detail-item
              .view-detail-label
                i.fas.fa-info-circle
                | Status
              .view-detail-value
                span.badge(class=category.is_active ? 'bg-success' : 'bg-danger' style="font-size: 0.85rem; padding: 0.4rem 0.75rem;")= category.is_active ? 'Active' : 'Inactive'
          .view-detail-row
            .view-detail-item
              .view-detail-label
                i.fas.fa-hashtag
                | Category ID
              .view-detail-value= category.id || 'N/A'
            .view-detail-item
              .view-detail-label
                i.fas.fa-calendar-alt
                | Created Date
              .view-detail-value= category.created_at ? new Date(category.created_at).toLocaleDateString('en-GB', { year: 'numeric', month: 'short', day: 'numeric' }) + ' ' + new Date(category.created_at).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) : 'N/A'
        .view-detail-section
          h6.view-section-title
            i.fas.fa-history.me-2
            | Metadata
          .view-detail-row
            .view-detail-item
              .view-detail-label
                i.fas.fa-clock
                | Last Updated
              .view-detail-value= category.updated_at ? new Date(category.updated_at).toLocaleDateString('en-GB', { year: 'numeric', month: 'short', day: 'numeric' }) + ' ' + new Date(category.updated_at).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) : 'N/A'
        if category.description && category.description.trim()
          .view-detail-section
            .view-notes-section
              h6.view-notes-title
                i.fas.fa-align-left
                | Description
              .view-notes-content= category.description
      .view-dialog-footer
        a.view-action-btn.view-action-btn-primary(href='/asset-categories/#{category.id}/form')
          i.fas.fa-edit
          | Edit Category
        a.view-action-btn.view-action-btn-secondary(href='/asset-categories')
          i.fas.fa-list
          | Back to List