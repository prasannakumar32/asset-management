extends ../navbar

block content
  .container-fluid.px-4.py-4
    .row.mb-4
      .col-12.position-relative
        .d-flex.align-items-center.justify-content-center(style="min-height: 50px;")
          a.btn.btn-outline-primary.position-absolute.start-0(href='/asset-categories')
            i.fas.fa-arrow-left.me-2
            | Back to Categories
          h1.mb-0.asset-title-centered
            i.fas.fa-folder.me-2.text-primary
            | Category Details
    .row.justify-content-center
      .col-lg-8.col-md-10
        .asset-view-card
          .asset-view-header
          .asset-details-container
            .row
              .col-md-6
                .asset-detail-item
                  .asset-detail-label
                    i.fas.fa-tag
                    | Category Name
                  .asset-detail-value= category.name || 'N/A'
              .col-md-6
                .asset-detail-item
                  .asset-detail-label
                    i.fas.fa-info-circle
                    | Status
                  .asset-detail-value
                    span.badge(class=category.is_active ? 'bg-success' : 'bg-danger')= category.is_active ? 'Active' : 'Inactive'
            .row
              .col-md-6
                .asset-detail-item
                  .asset-detail-label
                    i.fas.fa-hashtag
                    | Category ID
                  .asset-detail-value= category.id || 'N/A'
              .col-md-6
                .asset-detail-item
                  .asset-detail-label
                    i.fas.fa-calendar-alt
                    | Created Date
                  .asset-detail-value= category.created_at ? new Date(category.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) + ' ' + new Date(category.created_at).toLocaleTimeString() : 'N/A'
            .row
              .col-md-6
                .asset-detail-item
                  .asset-detail-label
                    i.fas.fa-clock
                    | Last Updated
                  .asset-detail-value= category.updated_at ? new Date(category.updated_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) + ' ' + new Date(category.updated_at).toLocaleTimeString() : 'N/A'
            // Description Section
            .row
              .col-12
                .asset-notes-card
                  .asset-notes-header
                    h6.asset-notes-title
                      i.fas.fa-align-left
                      | Description
                  .asset-notes-content
                    if category.description && category.description.trim()
                      p= category.description
                    else
                      .text-muted No description provided
          
          .asset-actions-section
            a.asset-action-btn.asset-btn-primary(href='/asset-categories/#{category.id}/form')
              i.fas.fa-edit
              | Edit Category
            a.asset-action-btn.asset-btn-secondary(href='/asset-categories')
              i.fas.fa-list
              | Back to List
