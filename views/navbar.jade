doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Asset Management System
    link(rel='stylesheet', href='/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css')
  body
    nav.navbar
      .navbar-brand Asset tracker
      ul.navbar-nav
        li
          a.nav-link(href='/dashboard', class=currentPage === 'dashboard' ? 'active' : '') Dashboard
        li
          a.nav-link(href='/assets', class=currentPage === 'assets' ? 'active' : '') Assets
        li
          a.nav-link(href='/employee', class=currentPage === 'employee' ? 'active' : '') Employees
        li
          a.nav-link(href='/asset-categories', class=currentPage === 'asset-categories' ? 'active' : '') Asset Categories
        li 
          a.nav-link(href='/stock', class=currentPage === 'stock' ? 'active' : '') Stock
        li
          a.nav-link(href='/asset-history', class=currentPage === 'asset-history' ? 'active' : '') Asset History
      .logout-container
        a.nav-link(href='/logout') Logout
    block content
    block scripts