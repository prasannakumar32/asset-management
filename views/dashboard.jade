extends navbar

block content
  body  
    .container-fluid
      h1.mb-4 Asset Management Dashboard
      .dashboard-horizontal
        .card(data="employees")
          .card-icon
            i.fa.fa-users.fa-2x
          .card-content
            h3 Total Employees
            .number.loading Loading...
            .description Registered employees
        .card(data="assets")
          .card-icon
            i.fa.fa-cubes.fa-2x
          .card-content
            h3 Total Assets
            .number.loading Loading...
            .description Active assets in system
        .card(data="assigned")
          .card-icon
            i.fa.fa-user.fa-2x
          .card-content
            h3 Assigned Assets
            .number.loading Loading...
            .description Currently assigned
        .card(data="available")
          .card-icon
            i.fa.fa-check-circle.fa-2x
          .card-content
            h3 Available Assets
            .number.loading Loading...
            .description Available for assignment

  script.
    async function loadDashboardData() {
      try {
        const response = await fetch('/api/dashboard');
        const data = await response.json();
        
        if (data.success) {
          document.querySelector('[data="employees"] .number').textContent = data.data.employeeCount;
          document.querySelector('[data="assets"] .number').textContent = data.data.assetCount;
          document.querySelector('[data="assigned"] .number').textContent = data.data.assignedCount;
          document.querySelector('[data="available"] .number').textContent = data.data.availableCount;
          document.querySelectorAll('.number').forEach(el => el.classList.remove('loading'));
        } else {
          throw new Error(data.error || 'Failed to load data');
        }
      } catch (error) {
        console.error('Dashboard error:', error);
        document.querySelectorAll('.number').forEach(el => {
          el.textContent = '0';
          el.classList.remove('loading');
        });
      }
    }
    document.addEventListener('DOMContentLoaded', loadDashboardData);
    
    setInterval(loadDashboardData, 30000);
